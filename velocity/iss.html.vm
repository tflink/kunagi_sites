<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN">

#parse( "global-variables.vm" )

#header("iss", "$issue.label - $projectname", "$projectname issue: $issue.label", "$projectname, issue, bug")


<div class="section">

    <h2>$issue.label</h2>

    #if( $issue.description )
        <p>$issue.description</p>
    #end

    #if( $issue.statement )
        <h3>Statement from $projectname Team</h3>
        <p>$issue.statement</p>
    #end

    #if( $issue.statusText )
        <h3>Status</h3>
        <p>$issue.statusText</p>
    #end

</div>

#commentsSection($issue)

#footer()
